---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import ArrowCard from "@components/ArrowCard.astro";
import { PROJECTS } from "@consts";
import { formatDate } from "@lib/utils";

const projects = (await getCollection("projects"))
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// For the featured/latest project, only consider released projects
const releasedProjects = projects.filter((project) => project.data.released);
const latestProject = releasedProjects[0];

// For other projects section, show all projects except the featured one
const otherProjects = projects.filter((project) => project.id !== latestProject?.id);
---

<Layout title={PROJECTS.TITLE} description={PROJECTS.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-16">
        
        <!-- Hero Section - Latest Project -->
        {latestProject && (
          <section class="animate space-y-6">
            <div class="space-y-2">
            
            </div>
            
            <!-- Featured Project Card -->
            <div class="relative group overflow-hidden rounded-2xl
                        bg-white/70 dark:bg-slate-800/70
                        backdrop-blur-md border border-slate-200/60 dark:border-slate-700/40
                        hover:bg-white/80 dark:hover:bg-slate-800/80
                        hover:border-slate-300/60 dark:hover:border-slate-600/50
                        hover:shadow-2xl hover:shadow-slate-900/10 dark:hover:shadow-slate-100/10
                        transition-all duration-500 ease-out transform-gpu
                        hover:scale-[1.01] hover:-translate-y-1">
              
              <div class="p-8 md:p-12 space-y-8">
                <div class="flex items-start justify-between">
                  <div class="space-y-6 flex-1">
                    <div class="inline-flex items-center gap-2 px-4 py-2 
                                bg-gradient-to-r from-blue-50 to-purple-50 
                                dark:from-blue-900/30 dark:to-purple-900/30
                                border border-blue-200/50 dark:border-purple-700/30
                                text-blue-700 dark:text-blue-300 
                                text-sm font-semibold rounded-full
                                backdrop-blur-sm">
                      <div class="size-2 rounded-full bg-blue-500 animate-pulse"></div>
                      Latest Release
                    </div>
                    
                    <div class="space-y-4">
                      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-slate-100 leading-tight tracking-tight">
                        {latestProject.data.title}
                      </h2>
                      
                      <p class="text-xl text-slate-600 dark:text-slate-300 leading-relaxed max-w-3xl">
                        {latestProject.data.description}
                      </p>
                    </div>
                    
                    <!-- Project Metadata -->
                    <div class="flex flex-wrap items-center gap-x-8 gap-y-4 py-6 border-y border-slate-200/50 dark:border-slate-700/50 text-sm text-slate-600 dark:text-slate-400">
                      {latestProject.data.ideaToDeploy && (
                        <div class="flex items-center gap-2">
                          <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                          </svg>
                          <span class="font-medium">{latestProject.data.ideaToDeploy} days to build</span>
                        </div>
                      )}
                      
                      {latestProject.data.commits && (
                        <div class="flex items-center gap-2">
                          <svg class="size-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                          </svg>
                          <span class="font-medium">{latestProject.data.commits} commits</span>
                        </div>
                      )}
                      
                      <div class="flex items-center gap-2">
                        <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <span class="font-medium">Released {new Intl.DateTimeFormat("en-US", {
                          month: "short",
                          day: "numeric",
                          year: "numeric"
                        }).format(latestProject.data.date)}</span>
                      </div>
                      
                      {latestProject.data.repoURL && (
                        <div class="flex items-center gap-2">
                          <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          <span class="font-medium">Open Source</span>
                        </div>
                      )}
                    </div>
                    
                    <!-- Tools & Models -->
                    <div class="space-y-6">
                      {latestProject.data.tools && latestProject.data.tools.length > 0 && (
                        <div class="space-y-3">
                          <h3 class="text-sm font-semibold text-slate-700 dark:text-slate-300 uppercase tracking-wide flex items-center gap-2">
                            <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            Tools & Technologies
                          </h3>
                          <div class="flex flex-wrap gap-2">
                            {latestProject.data.tools.map((tool) => (
                              <span class="inline-flex items-center px-3 py-1.5 
                                           bg-gradient-to-r from-slate-100 to-slate-200
                                           dark:from-slate-700 dark:to-slate-800
                                           border border-slate-200/50 dark:border-slate-600/50
                                           text-slate-700 dark:text-slate-300 
                                           text-sm font-medium rounded-lg backdrop-blur-sm">
                                {tool}
                              </span>
                            ))}
                          </div>
                        </div>
                      )}
                      
                      {latestProject.data.models && latestProject.data.models.length > 0 && (
                        <div class="space-y-3">
                          <h3 class="text-sm font-semibold text-slate-700 dark:text-slate-300 uppercase tracking-wide flex items-center gap-2">
                            <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                            </svg>
                            AI Models Used
                          </h3>
                          <div class="flex flex-wrap gap-2">
                            {latestProject.data.models.map((model) => (
                              <span class="inline-flex items-center px-3 py-1.5 
                                           bg-gradient-to-r from-purple-100 to-blue-100
                                           dark:from-purple-900/30 dark:to-blue-900/30
                                           border border-purple-200/50 dark:border-blue-700/30
                                           text-purple-700 dark:text-purple-300 
                                           text-sm font-medium rounded-lg backdrop-blur-sm">
                                {model}
                              </span>
                            ))}
                          </div>
                        </div>
                      )}
                    </div>
                    
                    <div class="flex flex-wrap gap-4 pt-4">
                      {latestProject.data.demoURL && (
                        <a 
                          href={latestProject.data.demoURL}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="group inline-flex items-center gap-3 px-8 py-4 
                                 bg-gradient-to-r from-blue-600 to-purple-600
                                 hover:from-blue-700 hover:to-purple-700
                                 text-white font-semibold rounded-xl
                                 hover:shadow-xl hover:shadow-blue-500/25
                                 hover:scale-105 transition-all duration-300 ease-out
                                 transform-gpu no-underline">
                          <svg class="size-5 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                          </svg>
                          Try it Live
                        </a>
                      )}
                      
                      <a 
                        href={`/projects/${latestProject.id}`}
                        class="group inline-flex items-center gap-3 px-8 py-4 
                               bg-white/80 dark:bg-slate-800/80 
                               border border-slate-200/80 dark:border-slate-600/50
                               text-slate-700 dark:text-slate-300 
                               font-semibold rounded-xl backdrop-blur-sm
                               hover:bg-white dark:hover:bg-slate-700
                               hover:border-slate-300 dark:hover:border-slate-500
                               hover:shadow-lg hover:scale-105
                               transition-all duration-300 ease-out no-underline transform-gpu">
                        Learn More
                        <svg class="size-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Enhanced background decoration -->
              <div class="absolute top-0 right-0 w-96 h-96 opacity-[0.03] dark:opacity-[0.08] pointer-events-none">
                <div class="w-full h-full bg-gradient-to-br from-blue-500 via-purple-500 to-indigo-500 rounded-full blur-3xl"></div>
              </div>
            </div>
          </section>
        )}

        <!-- Other Projects Section -->
        <section class="space-y-8">
          {otherProjects.length > 0 && (
            <div class="space-y-2">
              <h2 class="text-2xl font-bold text-slate-900 dark:text-slate-100 tracking-tight">
                Other Projects
              </h2>
              <p class="text-slate-600 dark:text-slate-400">
                Released and in-progress projects sorted by date
              </p>
            </div>
          )}
          
          <ul class="animate not-prose flex flex-col gap-4">
            {otherProjects.map((project, index) => (
              <li class="animate" style={`animation-delay: ${(index + 1) * 50}ms`}>
                <ArrowCard entry={project} />
              </li>
            ))}
          </ul>
        </section>
        
      </div>
    </aside>
  </Container>
</Layout>
