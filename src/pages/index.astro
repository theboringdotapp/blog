---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import ArrowCard from "@components/ArrowCard.astro";
import FormattedDate from "@components/FormattedDate.astro";
import Link from "@components/Link.astro";
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";

const allBlog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Separate posts and insights
const blogPosts = allBlog
  .filter((entry) => entry.data.type === "post")
  .slice(0, 3); // Show latest 3 posts

const insightEntries = allBlog
  .filter((entry) => entry.data.type === "insight")
  .slice(0, 4); // Show latest 4 insights

// Pre-render insight content
const insights = await Promise.all(
  insightEntries.map(async (insight) => {
    const { Content } = await render(insight);
    return { insight, Content };
  })
);

const projects: CollectionEntry<"projects">[] = (
  await getCollection("projects")
)
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <!-- Hero Section -->
      <div class="space-y-8 mb-24">

        <div class="space-y-6">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight
                     text-slate-900 dark:text-slate-100 leading-tight">
            <span class="gradient-text block mb-2 slide-up">vibecoded apps</span>
            <span class=" block  slide-up" style="animation-delay: 100ms">from a burnt-out dev</span>
          </h1>
          
          <div class="max-w-2xl space-y-6 text-lg leading-relaxed
                      text-slate-600 dark:text-slate-300">
            <p class="animate fade-in-up">
              Hi, I'm a software developer. I'm using AI to create simple, joyful tools to bring a bit of spark back to my life.
            </p>
            <p class="animate fade-in-up" style="animation-delay: 100ms">
              Don't judge the code just yet, I'm still learning how to deal with the mess AI makes. 
            </p>
          </div>
        </div>

        <div class="animate space-y-6 max-w-2xl fade-in-up" style="animation-delay: 200ms">
          <p class="text-lg leading-relaxed text-slate-600 dark:text-slate-300">
            I build in public and share what I learn along the way. Reach out :) 
          </p>
          
          <!-- Social Links -->
          <div class="flex flex-wrap gap-3">
            {
              SOCIALS.map((social, index) => (
                <Link href={social.HREF} external underline={false}>
                  <div class="social-button group inline-flex items-center gap-2 px-4 py-2
                             bg-white/60 dark:bg-slate-800/60
                             border border-slate-200/60 dark:border-slate-600/40
                             rounded-xl text-sm font-medium
                             text-slate-700 dark:text-slate-200
                             hover:bg-white/80 dark:hover:bg-slate-800/80
                             hover:border-slate-300/60 dark:hover:border-slate-500/50
                             hover:text-slate-900 dark:hover:text-slate-50
                             hover:shadow-lg hover:shadow-slate-200/20 dark:hover:shadow-black/20
                             transition-all duration-300 ease-out
                             backdrop-blur-sm transform-gpu hover:scale-105"
                       style={`animation-delay: ${300 + index * 50}ms`}>
                    {social.NAME}
                  </div>
                </Link>
              ))
            }
            <Link href={`mailto:${SITE.EMAIL}`} underline={false}>
              <div class="social-button group inline-flex items-center gap-2 px-4 py-2
                         bg-white/60 dark:bg-slate-800/60
                         border border-slate-200/60 dark:border-slate-600/40
                         rounded-xl text-sm font-medium
                         text-slate-700 dark:text-slate-200
                         hover:bg-white/80 dark:hover:bg-slate-800/80
                         hover:border-slate-300/60 dark:hover:border-slate-500/50
                         hover:text-slate-900 dark:hover:text-slate-50
                         hover:shadow-lg hover:shadow-slate-200/20 dark:hover:shadow-black/20
                         transition-all duration-300 ease-out
                         backdrop-blur-sm transform-gpu hover:scale-105"
                   style="animation-delay: 450ms">
                <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                {SITE.EMAIL}
              </div>
            </Link>
          </div>
        </div>

        <!-- Enhanced Stats Section -->
        <div class="mt-16 space-y-8">
          <!-- Tech Stack Cards -->
          <div class="space-y-6">
            <h3 class="text-lg font-semibold text-slate-800 dark:text-slate-200 opacity-90">
              Current stack & focus
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <!-- AI Tools Card -->
              <div class="tech-card group relative p-5 rounded-xl border border-slate-200/60 dark:border-slate-700/40 
                          bg-white/60 dark:bg-slate-900/60 backdrop-blur-sm
                          hover:border-purple-300/50 dark:hover:border-purple-700/50
                          transition-all duration-500 ease-out hover:shadow-lg hover:shadow-purple-200/15 dark:hover:shadow-purple-900/15
                          hover:-translate-y-0.5 transform-gpu">
                <div class="relative space-y-3">
                  <div class="flex items-center gap-3">
                    <div class="size-8 rounded-lg bg-gradient-to-br from-purple-500 to-blue-500 p-1.5 rotate-1 group-hover:rotate-3 transition-transform duration-500">
                      <svg class="size-full text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <div>
                      <h4 class="text-sm font-medium text-slate-600 dark:text-slate-400">Favorite AI tools</h4>
                      <p class="text-base font-semibold text-slate-900 dark:text-slate-100">
                        Cursor, Claude Code CLI, Ollama
                      </p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Models Card -->
              <div class="tech-card group relative p-5 rounded-xl border border-slate-200/60 dark:border-slate-700/40 
                          bg-white/60 dark:bg-slate-900/60 backdrop-blur-sm
                          hover:border-emerald-300/50 dark:hover:border-emerald-700/50
                          transition-all duration-500 ease-out hover:shadow-lg hover:shadow-emerald-200/15 dark:hover:shadow-emerald-900/15
                          hover:-translate-y-0.5 transform-gpu">
                <div class="relative space-y-3">
                  <div class="flex items-center gap-3">
                    <div class="size-8 rounded-lg bg-gradient-to-br from-emerald-500 to-cyan-500 p-1.5 -rotate-1 group-hover:-rotate-3 transition-transform duration-500">
                      <svg class="size-full text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                      </svg>
                    </div>
                    <div>
                      <h4 class="text-sm font-medium text-slate-600 dark:text-slate-400">Favorite AI models</h4>
                      <p class="text-base font-semibold text-slate-900 dark:text-slate-100">
                        claude-4-sonnet, gemini-2.5-pro
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Current Focus Section -->
          <div class="space-y-4">
            <div class="bg-white/30 dark:bg-slate-900/30 backdrop-blur-sm rounded-xl border border-slate-200/50 dark:border-slate-700/40 p-6 space-y-4">
              <div class="focus-item group flex items-start gap-4 p-3 rounded-lg 
                          hover:bg-slate-50/50 dark:hover:bg-slate-800/30
                          transition-all duration-300 ease-out">
                <div class="status-dot size-2 rounded-full bg-amber-500 mt-2.5 pulse-glow"></div>
                <div class="flex-1 space-y-1">
                  <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Current technical challenge</p>
                  <p class="text-base font-medium text-slate-900 dark:text-slate-100">How to use parallel agentic coding with Linear</p>
                </div>
              </div>
              
              <div class="focus-item group flex items-start gap-4 p-3 rounded-lg 
                          hover:bg-slate-50/50 dark:hover:bg-slate-800/30
                          transition-all duration-300 ease-out">
                <div class="status-dot size-2 rounded-full bg-emerald-500 mt-2.5 pulse-glow"></div>
                <div class="flex-1 space-y-1">
                  <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Next app</p>
                  <p class="text-base font-medium text-slate-900 dark:text-slate-100">An app to generate stories with music</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Content Sections with enhanced cards -->
      <div class="space-y-24">

        <!-- Featured Projects Section -->
        <section class="animate space-y-8 fade-in-up">
          <div class="flex flex-wrap items-center justify-between gap-y-4">
            <div class="space-y-2">
              <h2 class="text-2xl font-bold text-slate-900 dark:text-slate-100 tracking-tight">
                My tiny apps
              </h2>
              <p class="text-slate-600 dark:text-slate-400">
                AI-powered apps published so far
              </p>
            </div>
            <Link href="/projects" underline={false}>
              <div class="pill-button group inline-flex items-center gap-2 px-5 py-2.5
                         bg-gradient-to-r from-white to-slate-50 dark:from-slate-700 dark:to-slate-800
                         border border-slate-200 dark:border-slate-600
                         rounded-full text-sm font-medium
                         text-slate-700 dark:text-slate-100
                         hover:from-purple-50 hover:to-blue-50 dark:hover:from-purple-800/40 dark:hover:to-blue-800/40
                         hover:border-purple-200 dark:hover:border-purple-600
                         hover:text-purple-700 dark:hover:text-purple-200
                         hover:shadow-lg hover:shadow-purple-200/30 dark:hover:shadow-purple-900/30
                         transition-all duration-300 ease-out
                         backdrop-blur-sm transform-gpu hover:scale-105">
                See all apps
                <svg class="size-4 group-hover:translate-x-0.5 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </Link>
          </div>
          <ul class="not-prose grid gap-6">
            {
              projects.map((project, index) => (
                <li class="project-card-wrapper" style={`animation-delay: ${(index + 1) * 100}ms`}>
                  <ArrowCard entry={project} />
                </li>
              ))
            }
          </ul>
        </section>

        <!-- Recent Insights Section -->
        {insights.length > 0 && (
          <section class="animate space-y-8 fade-in-up">
            <div class="flex flex-wrap items-center justify-between gap-y-4">
              <div class="space-y-2">
                <h2 class="text-2xl font-bold text-slate-900 dark:text-slate-100 tracking-tight">
                  Recent thoughts
                </h2>
                <p class="text-slate-600 dark:text-slate-400">
                  Quick insights and learnings as I build
                </p>
              </div>
              <Link href="/blog" underline={false}>
                <div class="pill-button group inline-flex items-center gap-2 px-5 py-2.5
                           bg-gradient-to-r from-white to-slate-50 dark:from-slate-700 dark:to-slate-800
                           border border-slate-200 dark:border-slate-600
                           rounded-full text-sm font-medium
                           text-slate-700 dark:text-slate-100
                           hover:from-orange-50 hover:to-amber-50 dark:hover:from-orange-800/40 dark:hover:to-amber-800/40
                           hover:border-orange-200 dark:hover:border-orange-600
                           hover:text-orange-700 dark:hover:text-orange-200
                           hover:shadow-lg hover:shadow-orange-200/30 dark:hover:shadow-orange-900/30
                           transition-all duration-300 ease-out
                           backdrop-blur-sm transform-gpu hover:scale-105">
                  See timeline
                  <svg class="size-4 group-hover:translate-x-0.5 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </div>
              </Link>
            </div>
            
            <!-- Raw insights display -->
            <div class="space-y-6">
              {insights.map(({ insight, Content }, index) => (
                <div class="insight-wrapper border-l-2 border-neutral-200 dark:border-neutral-700 pl-6 py-3 group hover:border-neutral-300 dark:hover:border-neutral-600 transition-colors"
                     style={`animation-delay: ${(index + 1) * 100}ms`}>
                  <div class="space-y-3">
                    <!-- Avatar + Content -->
                    <div class="flex gap-3">
                      <!-- Avatar -->
                      <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white text-sm font-medium">
                          A
                        </div>
                      </div>
                      
                      <div class="flex-1 space-y-2">
                        <!-- Date aligned with text -->
                        <div class="text-xs text-neutral-400 dark:text-neutral-500 font-mono">
                          <FormattedDate date={insight.data.date} />
                        </div>
                        
                        <!-- Full insight content -->
                        <div class="prose prose-neutral dark:prose-invert prose-sm max-w-none text-neutral-800 dark:text-neutral-200 leading-relaxed">
                          <Content />
                        </div>
                        
                        <!-- Tags - Hidden by default, show on hover -->
                        {insight.data.tags && insight.data.tags.length > 0 && (
                          <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-out">
                            <div class="flex flex-wrap gap-1">
                              {insight.data.tags.map((tag) => (
                                <span class="text-xs px-2 py-1 bg-neutral-100 dark:bg-neutral-800 text-neutral-500 dark:text-neutral-400 rounded-full">
                                  #{tag}
                                </span>
                              ))}
                            </div>
                          </div>
                        )}
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </section>
        )}

        <!-- Latest Blog Posts Section -->
        {blogPosts.length > 0 && (
          <section class="animate space-y-8 fade-in-up">
            <div class="flex flex-wrap items-center justify-between gap-y-4">
              <div class="space-y-2">
                <h2 class="text-2xl font-bold text-slate-900 dark:text-slate-100 tracking-tight">
                  Latest posts
                </h2>
                <p class="text-slate-600 dark:text-slate-400">
                  In-depth articles and tutorials
                </p>
              </div>
              <Link href="/blog" underline={false}>
                <div class="pill-button group inline-flex items-center gap-2 px-5 py-2.5
                           bg-gradient-to-r from-white to-slate-50 dark:from-slate-700 dark:to-slate-800
                           border border-slate-200 dark:border-slate-600
                           rounded-full text-sm font-medium
                           text-slate-700 dark:text-slate-100
                           hover:from-emerald-50 hover:to-cyan-50 dark:hover:from-emerald-800/40 dark:hover:to-cyan-800/40
                           hover:border-emerald-200 dark:hover:border-emerald-600
                           hover:text-emerald-700 dark:hover:text-emerald-200
                           hover:shadow-lg hover:shadow-emerald-200/30 dark:hover:shadow-emerald-900/30
                           transition-all duration-300 ease-out
                           backdrop-blur-sm transform-gpu hover:scale-105">
                  See all posts
                  <svg class="size-4 group-hover:translate-x-0.5 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </div>
              </Link>
            </div>
            <ul class="not-prose grid gap-6">
              {
                blogPosts.map((post, index) => (
                  <li class="blog-card-wrapper" style={`animation-delay: ${(index + 1) * 100}ms`}>
                    <ArrowCard entry={post} />
                  </li>
                ))
              }
            </ul>
          </section>
        )}

      </div>
    </aside>
  </Container>
</Layout>

<script>
  // Trigger animations when elements come into view
  const animateElements = document.querySelectorAll('.animate, .tech-card, .focus-item, .project-card-wrapper, .blog-card-wrapper, .insight-wrapper, .social-button');
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('show');
      }
    });
  }, {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  });
  
  animateElements.forEach(el => {
    observer.observe(el);
  });
  
  // Clean up on page navigation
  document.addEventListener('astro:before-swap', () => {
    animateElements.forEach(el => {
      observer.unobserve(el);
    });
  });
</script>
