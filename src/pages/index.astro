---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects: CollectionEntry<"projects">[] = (
  await getCollection("projects")
)
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <!-- Hero Section -->
      <div class="space-y-8 mb-20">
        <div class="space-y-6">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight
                     text-brand-900 dark:text-brand-100 leading-tight">
            <span class="block mb-2">Introducing</span>
            <span class="gradient-text block float">Astro Micro ðŸ”¬</span>
          </h1>
          
          <div class="max-w-2xl space-y-6 text-lg leading-relaxed
                      text-brand-600 dark:text-brand-300">
            <p class="animate">
              Astro Micro is an accessible theme for <Link
                href="https://astro.build/">Astro</Link
              >. It's a fork of
              <Link href="https://github.com/markhorn-dev">
                Mark Horn's
              </Link> popular theme <Link
                href="https://astro.build/themes/details/astronano/"
                >Astro Nano</Link
              >. Like Nano, Micro comes with zero frameworks installed.
            </p>
            <p class="animate">
              Micro adds features like <Link href="https://pagefind.app/"
                >Pagefind</Link
              > for search, <Link href="https://giscus.app">Giscus</Link> for comments,
              and more. For a full list of changes, see this <Link
                href="/blog/00-micro-changelog">blog post</Link
              >.
            </p>
          </div>
        </div>

        <div class="animate space-y-4 max-w-2xl">
          <p class="text-lg leading-relaxed text-brand-600 dark:text-brand-300">
            Micro still comes with everything great about Nano â€” full type
            safety, a sitemap, an RSS feed, and Markdown + MDX support.
            Styled with TailwindCSS and preconfigured with system, light,
            and dark themes.
          </p>
          <div class="flex flex-wrap gap-4 pt-4">
            <Link href="https://github.com/trevortylerlee/astro-micro" external>
              <div class="inline-flex items-center gap-2 px-6 py-3 
                         bg-gradient-to-r from-accent-blue to-accent-purple
                         dark:from-accent-purple dark:to-accent-emerald
                         text-white font-semibold rounded-xl
                         hover:shadow-lg hover:shadow-accent-blue/25
                         dark:hover:shadow-accent-purple/25
                         hover:scale-105 transition-all duration-300 ease-out
                         transform-gpu">
                <svg class="size-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
                </svg>
                View on GitHub
              </div>
            </Link>
          </div>
        </div>
      </div>

      <!-- Content Sections -->
      <div class="space-y-20">

        <!-- Latest Posts Section -->
        <section class="animate space-y-8">
          <div class="flex flex-wrap items-center justify-between gap-y-4">
            <div class="space-y-2">
              <h2 class="text-2xl font-bold text-brand-900 dark:text-brand-100 tracking-tight">
                Latest posts
              </h2>
              <p class="text-brand-600 dark:text-brand-400">
                Recent thoughts and tutorials
              </p>
            </div>
            <Link href="/blog" underline={false}>
              <div class="inline-flex items-center gap-2 px-4 py-2
                         text-sm font-medium text-accent-blue dark:text-accent-purple
                         hover:text-accent-blue/80 dark:hover:text-accent-purple/80
                         transition-colors duration-200 ease-out">
                See all posts
                <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </Link>
          </div>
          <ul class="not-prose grid gap-6">
            {
              blog.map((post, index) => (
                <li class="animate" style={`animation-delay: ${(index + 1) * 100}ms`}>
                  <ArrowCard entry={post} />
                </li>
              ))
            }
          </ul>
        </section>

        <!-- Recent Projects Section -->
        <section class="animate space-y-8">
          <div class="flex flex-wrap items-center justify-between gap-y-4">
            <div class="space-y-2">
              <h2 class="text-2xl font-bold text-brand-900 dark:text-brand-100 tracking-tight">
                Recent projects
              </h2>
              <p class="text-brand-600 dark:text-brand-400">
                Things I've been building
              </p>
            </div>
            <Link href="/projects" underline={false}>
              <div class="inline-flex items-center gap-2 px-4 py-2
                         text-sm font-medium text-accent-blue dark:text-accent-purple
                         hover:text-accent-blue/80 dark:hover:text-accent-purple/80
                         transition-colors duration-200 ease-out">
                See all projects
                <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </Link>
          </div>
          <ul class="not-prose grid gap-6">
            {
              projects.map((project, index) => (
                <li class="animate" style={`animation-delay: ${(index + 1) * 100}ms`}>
                  <ArrowCard entry={project} />
                </li>
              ))
            }
          </ul>
        </section>

        <!-- Connect Section -->
        <section class="animate space-y-8">
          <div class="space-y-2">
            <h2 class="text-2xl font-bold text-brand-900 dark:text-brand-100 tracking-tight">
              Let's Connect
            </h2>
            <p class="text-brand-600 dark:text-brand-400">
              Get in touch and say hello
            </p>
          </div>
          
          <div class="space-y-6">
            <p class="text-lg leading-relaxed text-brand-600 dark:text-brand-300 max-w-2xl">
              If you want to get in touch with me about something or just to say
              hi, reach out on social media or send me an email.
            </p>
            
            <div class="flex flex-wrap gap-4">
              {
                SOCIALS.map((social) => (
                  <Link href={social.HREF} external underline={false}>
                    <div class="inline-flex items-center gap-2 px-4 py-2.5
                               bg-white/60 dark:bg-brand-800/30
                               border border-brand-200/60 dark:border-brand-700/60
                               rounded-xl text-sm font-medium
                               text-brand-700 dark:text-brand-300
                               hover:bg-white/80 dark:hover:bg-brand-800/50
                               hover:border-brand-300/60 dark:hover:border-brand-600/60
                               hover:text-brand-900 dark:hover:text-brand-100
                               hover:shadow-md hover:shadow-brand-200/20 dark:hover:shadow-brand-900/20
                               transition-all duration-300 ease-out
                               backdrop-blur-sm">
                      {social.NAME}
                    </div>
                  </Link>
                ))
              }
              <Link href={`mailto:${SITE.EMAIL}`} underline={false}>
                <div class="inline-flex items-center gap-2 px-4 py-2.5
                           bg-white/60 dark:bg-brand-800/30
                           border border-brand-200/60 dark:border-brand-700/60
                           rounded-xl text-sm font-medium
                           text-brand-700 dark:text-brand-300
                           hover:bg-white/80 dark:hover:bg-brand-800/50
                           hover:border-brand-300/60 dark:hover:border-brand-600/60
                           hover:text-brand-900 dark:hover:text-brand-100
                           hover:shadow-md hover:shadow-brand-200/20 dark:hover:shadow-brand-900/20
                           transition-all duration-300 ease-out
                           backdrop-blur-sm">
                  <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  {SITE.EMAIL}
                </div>
              </Link>
            </div>
          </div>
        </section>
      </div>
    </aside>
  </Container>
</Layout>
