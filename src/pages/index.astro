---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects: CollectionEntry<"projects">[] = (
  await getCollection("projects")
)
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <!-- Hero Section -->
      <div class="space-y-8 mb-20">
        <div class="space-y-6">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight
                     text-slate-900 dark:text-slate-100 leading-tight">
            <span class="block mb-2">Joyful little apps </span>
            <span class="gradient-text block float">from a burnt-out dev</span>
          </h1>
          
          <div class="max-w-2xl space-y-6 text-lg leading-relaxed
                      text-slate-600 dark:text-slate-300">
            <p class="animate">
              Hi, I'm a software developer. I'm using AI to create simple, joyful tools and micro-apps to bring a bit of spark back to life.
            </p>
            <p class="animate">
              All tools are designed to be easily published on the web and run on mostly free infrastructure.
            </p>
          </div>
        </div>

        <div class="animate space-y-4 max-w-2xl">
          <p class="text-lg leading-relaxed text-slate-600 dark:text-slate-300">
            I share what I build, how I build it, and what I learn along the way. Feel free to reach out!
          </p>
    
        </div>
      </div>

      <!-- Content Sections -->
      <div class="space-y-20">

        <!-- Featured Projects Section -->
        <section class="animate space-y-8">
          <div class="flex flex-wrap items-center justify-between gap-y-4">
            <div class="space-y-2">
              <h2 class="text-2xl font-bold text-slate-900 dark:text-slate-100 tracking-tight">
                Featured tools
              </h2>
              <p class="text-slate-600 dark:text-slate-400">
                AI-powered apps published so far
              </p>
            </div>
            <Link href="/projects" underline={false}>
              <div class="inline-flex items-center gap-2 px-4 py-2
                         text-sm font-medium text-blue-600 dark:text-purple-400
                         hover:text-blue-700 dark:hover:text-purple-300
                         transition-colors duration-200 ease-out">
                See all tools
                <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </Link>
          </div>
          <ul class="not-prose grid gap-6">
            {
              projects.map((project, index) => (
                <li class="animate" style={`animation-delay: ${(index + 1) * 50}ms`}>
                  <ArrowCard entry={project} />
                </li>
              ))
            }
          </ul>
        </section>

        <!-- Latest Posts Section -->
        <section class="animate space-y-8">
          <div class="flex flex-wrap items-center justify-between gap-y-4">
            <div class="space-y-2">
              <h2 class="text-2xl font-bold text-slate-900 dark:text-slate-100 tracking-tight">
                Latest posts
              </h2>
              <p class="text-slate-600 dark:text-slate-400">
                Insights on building with AI
              </p>
            </div>
            <Link href="/blog" underline={false}>
              <div class="inline-flex items-center gap-2 px-4 py-2
                         text-sm font-medium text-blue-600 dark:text-purple-400
                         hover:text-blue-700 dark:hover:text-purple-300
                         transition-colors duration-200 ease-out">
                See all posts
                <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </Link>
          </div>
          <ul class="not-prose grid gap-6">
            {
              blog.map((post, index) => (
                <li class="animate" style={`animation-delay: ${(index + 1) * 50}ms`}>
                  <ArrowCard entry={post} />
                </li>
              ))
            }
          </ul>
        </section>

        <!-- Connect Section -->
        <section class="animate space-y-8">
          <div class="space-y-2">
            <h2 class="text-2xl font-bold text-brand-900 dark:text-brand-100 tracking-tight">
              Let's Connect
            </h2>
            <p class="text-brand-600 dark:text-brand-400">
              Get in touch and say hello
            </p>
          </div>
          
          <div class="space-y-6">
            <p class="text-lg leading-relaxed text-brand-600 dark:text-brand-300 max-w-2xl">
              If you want to get in touch with me about something or just to say
              hi, reach out on social media or send me an email.
            </p>
            
            <div class="flex flex-wrap gap-4">
              {
                SOCIALS.map((social) => (
                  <Link href={social.HREF} external underline={false}>
                    <div class="inline-flex items-center gap-2 px-4 py-2.5
                               bg-white/80 dark:bg-slate-800/90
                               border border-slate-200/80 dark:border-slate-600/50
                               rounded-xl text-sm font-medium
                               text-slate-700 dark:text-slate-200
                               hover:bg-white/95 dark:hover:bg-slate-800/95
                               hover:border-slate-300/80 dark:hover:border-slate-500/60
                               hover:text-slate-900 dark:hover:text-slate-50
                               hover:shadow-md hover:shadow-slate-200/30 dark:hover:shadow-black/30
                               transition-all duration-300 ease-out
                               backdrop-blur-sm">
                      {social.NAME}
                    </div>
                  </Link>
                ))
              }
              <Link href={`mailto:${SITE.EMAIL}`} underline={false}>
                <div class="inline-flex items-center gap-2 px-4 py-2.5
                           bg-white/80 dark:bg-slate-800/90
                           border border-slate-200/80 dark:border-slate-600/50
                           rounded-xl text-sm font-medium
                           text-slate-700 dark:text-slate-200
                           hover:bg-white/95 dark:hover:bg-slate-800/95
                           hover:border-slate-300/80 dark:hover:border-slate-500/60
                           hover:text-slate-900 dark:hover:text-slate-50
                           hover:shadow-md hover:shadow-slate-200/30 dark:hover:shadow-black/30
                           transition-all duration-300 ease-out
                           backdrop-blur-sm">
                  <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  {SITE.EMAIL}
                </div>
              </Link>
            </div>
          </div>
        </section>
      </div>
    </aside>
  </Container>
</Layout>
