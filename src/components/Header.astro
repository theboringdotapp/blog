---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
---

<header transition:persist>
  <Container>
    <div class="flex flex-wrap justify-between items-center gap-y-4">
      <!-- Logo/Brand -->
      <Link href="/" underline={false}>
        <div class="font-bold text-lg tracking-tight
                    text-brand-900 dark:text-brand-100
                    hover:text-accent-blue dark:hover:text-accent-purple
                    transition-colors duration-300 ease-out
                    group flex items-center gap-2">
          <span class="gradient-text font-extrabold text-xl">
            {SITE.TITLE}
          </span>
          <span class="text-2xl filter drop-shadow-sm
                      group-hover:scale-110 transform-gpu
                      transition-transform duration-300 ease-out">
            ðŸ”¬
          </span>
        </div>
      </Link>
      
      <!-- Navigation -->
      <nav class="flex items-center gap-6 text-sm">
        <!-- Navigation Links -->
        <div class="flex items-center gap-1 text-brand-600 dark:text-brand-300">
          <div class="px-3 py-2 rounded-lg
                      hover:bg-brand-100/50 dark:hover:bg-brand-800/50
                      transition-all duration-200 ease-out">
            <Link href="/blog" underline={false}>
              <span class="font-medium hover:text-brand-900 dark:hover:text-brand-100
                          transition-colors duration-200 ease-out">
                blog
              </span>
            </Link>
          </div>
          <span class="text-brand-400 dark:text-brand-500 mx-1">/</span>
          <div class="px-3 py-2 rounded-lg
                      hover:bg-brand-100/50 dark:hover:bg-brand-800/50
                      transition-all duration-200 ease-out">
            <Link href="/projects" underline={false}>
              <span class="font-medium hover:text-brand-900 dark:hover:text-brand-100
                          transition-colors duration-200 ease-out">
                projects
              </span>
            </Link>
          </div>
        </div>
        
        <!-- Enhanced Search Button -->
        <button
          id="magnifying-glass"
          aria-label="Search"
          class="flex items-center gap-2 px-4 py-2.5 text-sm font-medium
                 rounded-xl border transition-all duration-300 ease-out
                 bg-white/60 dark:bg-brand-800/30
                 border-brand-200/60 dark:border-brand-700/60
                 text-brand-600 dark:text-brand-300
                 hover:bg-white/80 dark:hover:bg-brand-800/50
                 hover:border-brand-300/60 dark:hover:border-brand-600/60
                 hover:text-brand-900 dark:hover:text-brand-100
                 hover:shadow-md hover:shadow-brand-200/20 dark:hover:shadow-brand-900/20
                 hover:scale-105
                 focus-visible:bg-white/80 dark:focus-visible:bg-brand-800/50
                 focus-visible:border-brand-300/60 dark:focus-visible:border-brand-600/60
                 backdrop-blur-sm transform-gpu"
        >
          <svg
            height="16"
            width="16"
            stroke-linejoin="round"
            viewBox="0 0 16 16"
            class="stroke-current transition-transform duration-300 ease-out
                   group-hover:scale-110"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M3.5 7C3.5 5.067 5.067 3.5 7 3.5C8.933 3.5 10.5 5.067 10.5 7C10.5 7.88461 10.1718 8.69256 9.63058 9.30876L9.30876 9.63058C8.69256 10.1718 7.88461 10.5 7 10.5C5.067 10.5 3.5 8.933 3.5 7ZM9.96544 11.0261C9.13578 11.6382 8.11014 12 7 12C4.23858 12 2 9.76142 2 7C2 4.23858 4.23858 2 7 2C9.76142 2 12 4.23858 12 7C12 8.11014 11.6382 9.13578 11.0261 9.96544L14.0303 12.9697L14.5607 13.5L13.5 14.5607L12.9697 14.0303L9.96544 11.0261Z"
              fill="currentColor"
            ></path>
          </svg>
          <span class="hidden sm:inline">Search</span>
          <!-- Keyboard shortcut hint -->
          <span class="hidden md:flex items-center gap-1 text-xs 
                       text-brand-400 dark:text-brand-500
                       bg-brand-100/50 dark:bg-brand-700/50
                       px-2 py-1 rounded-md">
            <span>âŒ˜</span><span>K</span>
          </span>
        </button>
      </nav>
    </div>
  </Container>
</header>
