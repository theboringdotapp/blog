---
import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"blog"> | CollectionEntry<"projects">;
};

const { entry } = Astro.props as {
  entry: CollectionEntry<"blog"> | CollectionEntry<"projects">;
};
---

<a
  href={`/${entry.collection}/${entry.id}`}
  class="not-prose group relative flex flex-nowrap rounded-xl p-6 
         bg-white/80 dark:bg-slate-800/90
         border border-slate-200/80 dark:border-slate-600/50
         backdrop-blur-sm
         transition-all duration-300 ease-out
         hover:bg-white/95 dark:hover:bg-slate-800/95
         hover:border-slate-300/80 dark:hover:border-slate-500/60
         hover:shadow-lg hover:shadow-slate-200/30 dark:hover:shadow-black/30
         hover:scale-[1.02] hover:-translate-y-0.5
         focus-visible:bg-white/95 dark:focus-visible:bg-slate-800/95
         focus-visible:border-slate-300/80 dark:focus-visible:border-slate-500/60
         transform-gpu"
>
  <div class="flex flex-1 flex-col">
    <div class="font-semibold text-slate-900 dark:text-slate-50 mb-2 leading-tight
                group-hover:text-blue-600 dark:group-hover:text-purple-400
                transition-colors duration-300 ease-out">
      {entry.data.title}
    </div>
    <div class="text-sm text-slate-600 dark:text-slate-300 leading-relaxed">
      {entry.data.description}
    </div>
  </div>
  
  <!-- Simplified arrow icon -->
  <div class="absolute right-6 top-1/2 -translate-y-1/2 
              text-slate-400 dark:text-slate-400
              group-hover:text-blue-600 dark:group-hover:text-purple-400
              transition-all duration-300 ease-out
              group-hover:translate-x-1
              transform-gpu">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      class="size-5 fill-none stroke-current stroke-2"
    >
      <line
        x1="5"
        y1="12"
        x2="19"
        y2="12"
        class="translate-x-1 scale-x-75 opacity-70
               transition-all duration-300 ease-out 
               group-hover:translate-x-0 group-hover:scale-x-100 group-hover:opacity-100"
      ></line>
      <polyline
        points="12 5 19 12 12 19"
        class="transition-all duration-300 ease-out 
               group-hover:translate-x-0.5"
      ></polyline>
    </svg>
  </div>
  
  <!-- Subtle glow effect on hover -->
  <div class="absolute inset-0 rounded-xl 
              bg-gradient-to-r from-blue-500/5 via-transparent to-purple-500/5
              dark:from-purple-500/5 dark:via-transparent dark:to-emerald-500/5
              opacity-0 transition-opacity duration-300 ease-out
              group-hover:opacity-100
              pointer-events-none"></div>
</a>
